<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fundoo.View.Settings.ChangePassword">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Old Password"></Label>
            <Entry x:Name="oldPassword" Placeholder="Old Password"/>
            <Label Text="New Password"></Label>
            <Entry x:Name="newPassword" Placeholder="New Password"/>
            <Button Text="Confirm Password" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>