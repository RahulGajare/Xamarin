<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fundoo.View.NotesPage">



    <ContentPage.ToolbarItems>
        <ToolbarItem Icon="logoutIcon.png" Text="Log Out" Clicked="LogoutIcon_Clicked"/>
    </ContentPage.ToolbarItems>

   
        <ContentPage.Content>
        <StackLayout>
            <ScrollView Orientation="Vertical" VerticalOptions="StartAndExpand" HeightRequest="480">

                <Grid x:Name="gridLayout">

                </Grid>
            </ScrollView>


            <StackLayout VerticalOptions="EndAndExpand">
                <Button x:Name="TakeaNote" 
                    Text="Take a note ..."
                    VerticalOptions="End" 
                    HorizontalOptions="FillAndExpand"
                    BackgroundColor="Transparent" 
                    Margin="10,0,175,0"
                    Clicked="TakeaNote_Clicked">
                </Button>
            </StackLayout>
        </StackLayout> 

    </ContentPage.Content>


</ContentPage>