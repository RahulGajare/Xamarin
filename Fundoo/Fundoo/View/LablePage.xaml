<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fundoo.View.LablePage">
    <ContentPage.Content>
        <StackLayout Orientation="Horizontal" VerticalOptions="StartAndExpand" Spacing="2" Margin="0,10,0,0">
            <Image x:Name="CancelIcon" Source="CancelIcon" WidthRequest="30" HorizontalOptions="Start"  HeightRequest="30"/>
            <Entry x:Name="lable" Placeholder="Create new lable" HorizontalOptions="FillAndExpand" />
            <Image x:Name="TickIcon" Source="TickIcon" WidthRequest="30" HorizontalOptions="End"  HeightRequest="30"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>