<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fundoo.View.ProfilePicEdit">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="StartAndExpand">
            <Image x:Name="imgBanner"></Image>
            <Image x:Name="imgChoosed" HeightRequest="200"></Image>
            <Button x:Name="EditButton" Text="Edit" Clicked="Edit_Clicked"></Button>
            <Button x:Name="SaveButton" Text="Save" Clicked="Save_Clicked"></Button>
            <Image x:Name="image">

            </Image>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>