<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fundoo.View.ForgotPassword">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Enter Email address"/>
            <Entry  Placeholder="Enter your Email Here"  TextColor="Black"/>
            <Button x:Name ="ResetPassword"  Text="Reset Password" Clicked="ResetPassword_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>