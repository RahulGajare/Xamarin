<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fundoo.View.ForgotPassword"
              BackgroundColor="LightCyan">
    
    <ContentPage.Content>
        <StackLayout Margin="20,0,20,0">
            <Label Text="Enter Email address"/>
            <Entry  x:Name ="txtEmailAddress" Placeholder="Enter your Email Here"  TextColor="Black"/>
            <Button x:Name ="txtResetPassword"  Text="Reset Password" Clicked="TxtResetPassword_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>