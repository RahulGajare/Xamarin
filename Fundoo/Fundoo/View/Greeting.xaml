<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fundoo.View.FirstPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Label Margin="20,20,20,20" Text="Welcome To Fundoo"  FontAttributes="Italic" FontSize="20" HorizontalTextAlignment="Center" TextColor="DarkBlue"></Label>
            </StackLayout>

            <Image x:Name="FundooLogo" Source="FundooLogo.png"  WidthRequest="200" HeightRequest="100"></Image>
            <StackLayout HorizontalOptions="CenterAndExpand" Orientation="Vertical" Margin="0,20,0,0">
                <Button x:Name="Login" Text="Login" WidthRequest="150"  CornerRadius="25" BorderColor="DarkOrange" BackgroundColor="Cyan" Clicked="Login_Clicked"/>
                <Label>
                </Label>
                <Button x:Name="Register" Text="Register" WidthRequest="150" CornerRadius="25" BorderColor="DarkOrange"  Clicked="Register_Clicked"/>

            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>