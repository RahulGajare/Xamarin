<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fundoo.View.EditLabel">


    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal" VerticalOptions="StartAndExpand" Spacing="2" Margin="20,10,20,0">
                <Image x:Name="DeleteIcon" Source="DeleteIcon" WidthRequest="30" HorizontalOptions="Start"  HeightRequest="30"/>
                <Entry x:Name="UserLable"  HorizontalOptions="FillAndExpand" />
                <Image x:Name="TickIcon" Source="TickIcon" WidthRequest="30" HorizontalOptions="End"  HeightRequest="30"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>